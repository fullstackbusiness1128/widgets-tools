{
    "name": "root",
    "private": true,
    "scripts": {
        "format": "pretty-quick",
        "lint": "lerna run lint",
        "build": "lerna run build",
        "release": "lerna version --conventional-commits"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/plugin-proposal-class-properties": "^7.3.0",
        "@babel/plugin-transform-flow-strip-types": "^7.2.3",
        "@babel/plugin-transform-react-jsx": "^7.3.0",
        "@commitlint/cli": "^7.4.0",
        "@commitlint/config-conventional": "^7.3.1",
        "@commitlint/config-lerna-scopes": "^7.3.1",
        "@types/big.js": "^4.0.5",
        "@types/node": "^10.12.18",
        "@types/react": "^16.7.21",
        "@types/react-dom": "^16.0.11",
        "@types/react-native": "^0.57.32",
        "@types/react-native-video": "^3.1.0",
        "check-dependencies": "^1.1.0",
        "del": "^3.0.0",
        "gh-release": "^3.4.0",
        "gulp": "^4.0.0",
        "gulp-change": "^1.0.2",
        "gulp-git": "^2.8.1",
        "gulp-rename": "^1.4.0",
        "gulp-xml2js": "^0.1.1",
        "gulp-zip": "^4.2.0",
        "husky": "^1.3.1",
        "lerna": "^3.10.7",
        "lint-staged": "^8.1.1",
        "mendix-client": "^7.15.6",
        "mime": "^2.4.0",
        "prettier": "^1.16.1",
        "pretty-quick": "^1.10.0",
        "react": "^16.7.0",
        "react-dom": "^16.7.0",
        "react-native": "^0.58.1",
        "react-native-add-calendar-event": "^2.2.0",
        "react-native-camera": "^1.9.2",
        "react-native-device-info": "^0.26.4",
        "react-native-firebase": "^5.2.1",
        "react-native-image-picker": "^0.28.0",
        "react-native-inappbrowser-reborn": "^1.3.13",
        "react-native-maps": "^0.23.0",
        "react-native-sound": "^0.10.12",
        "react-native-svg": "^9.2.3",
        "react-native-touch-id": "^4.3.0",
        "react-native-video": "^4.3.1",
        "rollup": "^1.1.2",
        "rollup-plugin-babel": "^4.3.2",
        "rollup-plugin-commonjs": "^9.2.0",
        "rollup-plugin-node-resolve": "^4.0.0",
        "rollup-plugin-terser": "^4.0.3",
        "rollup-plugin-typescript2": "^0.19.2",
        "tslint": "^5.12.1",
        "tslint-config-prettier": "^1.17.0",
        "tslint-react": "^3.6.0",
        "typescript": "^3.2.4",
        "widget-typing-generator": "^0.0.1"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && pretty-quick --staged",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint"
        ]
    },
    "commitlint": {
        "extends": [
            "@commitlint/config-lerna-scopes",
            "@commitlint/config-conventional"
        ]
    },
    "prettier": {
        "printWidth": 120,
        "tabWidth": 4,
        "proseWrap": "always",
        "overrides": [
            {
                "files": "CHANGELOG.md",
                "options": {
                    "proseWrap": "preserve"
                }
            }
        ]
    }
}
