{
  "name": "widgets-tools",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "prettier": "prettier --config \"./prettier.config.js\" --write \"**/*.{js,jsx,ts,tsx,scss,html,xml,yml,yaml}\"",
    "lint:src": "eslint --config .eslintrc.js --ext .jsx,.js,.ts,.tsx packages/*/*/src --no-error-on-unmatched-pattern",
    "lint:scripts": "eslint --fix --config .eslintrc.js --ext .jsx,.js,.ts,.tsx scripts",
    "release:pwt": "ts-node --project ./scripts/tsconfig.json ./scripts/release/createPWTRelease.ts",
    "build:release:parser": "peggy -o ./scripts/release/utils/changelog-parser/parser/widget/widget.js ./scripts/release/utils/changelog-parser/parser/widget/widget.pegjs"
  },
  "devDependencies": {
    "@prettier/plugin-xml": "^2.2.0",
    "@types/jest-image-snapshot": "^4.3.1",
    "@types/node": "^16.11.19",
    "@types/node-fetch": "2.6.1",
    "@types/shelljs": "^0.8.9",
    "@types/xml2js": "^0.4.5",
    "deepmerge": "^4.2.2",
    "fast-xml-parser": "^4.0.1",
    "identity-obj-proxy": "^3.0.0",
    "node-fetch": "^2.6.1",
    "peggy": "^1.2.0",
    "prettier": "^2.5.1",
    "shelljs": "^0.8.4",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
